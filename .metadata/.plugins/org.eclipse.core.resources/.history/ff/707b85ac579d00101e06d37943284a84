package com.microservice.api_gateway.config;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.security.config.annotation.web.reactive.EnableWebFluxSecurity;
import org.springframework.security.config.web.server.ServerHttpSecurity;
import org.springframework.security.core.userdetails.MapReactiveUserDetailsService;
import org.springframework.security.core.userdetails.User;
import org.springframework.security.core.userdetails.UserDetails;
import org.springframework.security.web.server.SecurityWebFilterChain;

@Configuration
@EnableWebFluxSecurity  // For reactive security
public class ApiGatewaySecurityConfig {

    @Bean
    public SecurityWebFilterChain securityFilterChain(ServerHttpSecurity http) throws Exception {
        http
                .csrf().disable()  // Disable CSRF for API
                .authorizeExchange(authorize -> authorize
                        // Open routes if any (e.g., discovery)
                        .pathMatchers("/eureka/**").permitAll()
                        // Swagger open or protected
                        .pathMatchers("/**/swagger-ui/**", "/**/api-docs/**").permitAll()
                        // Admin-only: add/delete products
                        .pathMatchers("/products").hasRole("ADMIN")  // Assuming POST for add
                        .pathMatchers("/products/**").hasRole("ADMIN")  // DELETE/PUT
                        // Customer/Admin: place orders
                        .pathMatchers("/orders").hasAnyRole("CUSTOMER", "ADMIN")
                        // All authenticated: get users/orders/products
                        .pathMatchers("/users/**", "/orders/**", "/products/**").authenticated()
                        // Any other requests require auth
                        .anyExchange().authenticated()
                )
                .httpBasic();  // Basic Auth

        return http.build();
    }

    @Bean
    public MapReactiveUserDetailsService userDetailsService() {
        UserDetails admin = User.withDefaultPasswordEncoder()
                .username("admin")
                .password("adminpass")
                .roles("ADMIN")
                .build();

        UserDetails customer = User.withDefaultPasswordEncoder()
                .username("customer")
                .password("custpass")
                .roles("CUSTOMER")
                .build();

        return new MapReactiveUserDetailsService(admin, customer);
    }
}