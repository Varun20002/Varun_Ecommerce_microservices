spring.application.name=order-service
server.port=8083  # Example port

# H2 Database
spring.datasource.url=jdbc:h2:file:./product.db
spring.datasource.driverClassName=org.h2.Driver
spring.datasource.username=bbk
spring.datasource.password=
spring.jpa.database-platform=org.hibernate.dialect.H2Dialect
spring.jpa.hibernate.ddl-auto=update
spring.h2.console.enabled=true

# Eureka Client
eureka.client.service-url.defaultZone=http://localhost:8761/eureka/
eureka.instance.hostname=localhost

# Logging
logging.level.com.microservice=DEBUG
logging.file.name=order-service.log

# Swagger
springdoc.api-docs.path=/api-docs
springdoc.swagger-ui.path=/swagger-ui.html

# Feign clients (optional hysteresis, etc.)
feign.client.config.default.connectTimeout=5000
feign.client.config.default.readTimeout=5000